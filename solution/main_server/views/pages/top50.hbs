<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/javascripts/top50.js"></script>

<main class="container">

    <!-- Page header -->
    <div class="page-header mb-4 pb-3 border-bottom">
        <div class="d-flex justify-content-center">
            <h3 id="pageTitle" class="fw-bold mb-1 text-center"></h3>
        </div>
    </div>

    <!-- Status / errors -->
    <div id="statusMessage" class="alert alert-info d-none" role="status">
        <div class="d-flex justify-content-center align-items-center gap-2">
            <div class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></div>
            <span id="statusText">Loadingâ€¦</span>
        </div>
    </div>

    <div id="errorMessage" class="alert alert-danger d-none" role="alert">
        Something went wrong while contacting the SQL satellite.
    </div>

    <!-- Results summary -->
    <div id="resultsSummary" class="text-muted small mb-3 d-none"></div>

    <!-- Results grid -->
    <div id="resultsGrid" class="row g-3"></div>

    <!-- Template card anime -->
    <template id="animeCardTemplate">
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="#">
                <div class="card h-100 shadow-sm card overflow-hidden position-relative">

                    <!-- Rank grande a sinistra sopra l'immagine -->
                    <div class="rank-circle position-absolute d-flex justify-content-center align-items-center text-white fw-bold fs-4">
                        0
                    </div>

                    <!-- Immagine -->
                    <img class="card-img-top anime-img" src="" alt="Anime image">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2"></h5>
                        <div class="card-score text-muted mb-2"></div>
                        <div class="card-genres mt-auto"></div>
                    </div>
                </div>
            </a>
        </div>
    </template>

    <!-- Template card character -->
    <template id="characterCardTemplate">
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="#">
                <div class="card h-100 shadow-sm card overflow-hidden position-relative">

                    <!-- Rank/Favorites -->
                    <div class="rank-circle position-absolute d-flex justify-content-center align-items-center text-white fw-bold fs-4">
                        0
                    </div>

                    <!-- Immagine -->
                    <img class="card-img-top character-img" src="" alt="Character image">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2"></h5>
                        <div class="card-name_kanji text-muted mb-2"></div>
                        <div class="card-favorites text-muted mt-auto"></div>
                    </div>
                </div>
            </a>
        </div>
    </template>

    <!-- Template card person -->
    <template id="personCardTemplate">
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" href="#">
                <div class="card h-100 shadow-sm card overflow-hidden position-relative">

                    <!-- Rank/Favorites -->
                    <div class="rank-circle position-absolute d-flex justify-content-center align-items-center text-white fw-bold fs-4">
                        0
                    </div>

                    <!-- Immagine -->
                    <img class="card-img-top person-img" src="" alt="Person image">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2"></h5>
                        <div class="card-favorites text-muted mt-auto"></div>
                        <div class="card-relevant-location text-muted mt-auto"></div>
                    </div>
                </div>
            </a>
        </div>
    </template>

    <template id="userCardTemplate">
        <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm overflow-hidden position-relative">

                    <!-- Completed -->
                    <div class="rank-circle position-absolute d-flex justify-content-center align-items-center text-white fw-bold fs-4">
                        0
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2"></h5>
                        <div class="card-location text-muted mt-auto"></div>
                        <div class="card-completed text-muted mt-auto"></div>
                        <div class="card-dropped text-muted mt-auto"></div>
                    </div>
                </div>
        </div>
    </template>


    <!-- Empty state -->
    <div id="emptyState" class="border rounded p-4 text-center d-none">
        <div class="mb-2 fw-semibold">No results found</div>
        <div class="text-muted">Try a different title (e.g., Naruto, One Piece, Bleach).</div>
    </div>

</main>