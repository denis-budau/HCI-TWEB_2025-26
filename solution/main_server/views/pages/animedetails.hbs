/*here we'll have the anime details*/
<input type="hidden" id="malId" value="{{mal_id}}">
<main class="container my-4">

    <!-- Top area: image + title + quick stats -->
    <div class="row g-4 align-items-start">

        <!-- Left: poster -->
        <div class="col-12 col-md-4 col-lg-3">
            <div class="card">
                <img
                        id="animePoster"
                        src="{{image_url}}"
                        alt="{{title}}"
                        class="img-fluid rounded"
                >
            </div>
        </div>

        <!-- Center/right: title + info -->
        <div class="col-12 col-md-8 col-lg-9">

            <!-- Big centered title -->
            <div class="text-center text-md-start mb-3">
                <h1 class="display-6 fw-bold mb-1">{{title}}</h1>
                {{#if title_japanese}}
                    <div class="text-muted">{{title_japanese}}</div>
                {{/if}}
            </div>

            <!-- Info cards -->
            <div class="row g-3">

                <div class="col-12 col-lg-6">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-2">Info</div>

                        <div class="mb-1"><span class="text-muted">Score:</span> {{score}}</div>
                        <div class="mb-1"><span class="text-muted">Episodes:</span> {{episodes}}</div>
                        <div class="mb-1"><span class="text-muted">Studios:</span> {{studios}}</div>
                        <div class="mb-1"><span class="text-muted">Producers:</span> {{producers}}</div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-2">Genres</div>
                        <div>{{genres}}</div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Synopsis section (filled by JS) -->
    <div class="mt-4">
        <div class="border rounded p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="fw-semibold">Synopsis</div>
                <span id="synopsisStatus" class="text-muted small">Loading...</span>
            </div>
            <div id="synopsisText" class="mt-2 text-muted">
                <!-- JS will fill this -->
            </div>
        </div>
    </div>

</main>

<script src="/javascripts/animeDetails.js"></script>
