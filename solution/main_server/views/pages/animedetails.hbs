<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/javascripts/animeDetails.js"></script>

<!-- <input type="hidden" id="malId" value=""> -->
<main class="container my-4">

    <!-- Top area: image + title + quick stats -->
    <div class="row g-4 align-items-start">

        <!-- Left: poster -->
        <div class="col-12 col-md-4 col-lg-3">
            <div class="card">
                <img id="animePoster" src="" alt="" class="img-fluid anime-img rounded">
            </div>
        </div>

        <!-- Center/right: title + info -->
        <div class="col-12 col-md-8 col-lg-9">

            <!-- Big centered title -->
            <div class="text-center text-md-start mb-3">
                <h1 class="title-name display-6 fw-bold mb-1">gnaaam</h1>
                <div class="japan-name text-muted">japanese</div>
            </div>

            <!-- Info cards -->
            <div class="row g-3">

                <div class="col-12 col-lg-6">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-2">Info</div>

                        <div class="score mb-1"><span class="text-muted">Score:</span></div>
                        <div class="episodes mb-1"><span class="text-muted">Episodes:</span></div>
                        <div class="studios mb-1"><span class="text-muted">Studios:</span></div>
                        <div class="producers mb-1"><span class="text-muted">Producers:</span></div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-2">Genres</div>
                        <div class="genres"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Synopsis section (filled by JS) -->
    <div class="mt-4">
        <div class="border rounded p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="fw-semibold">Synopsis</div>
                <span id="synopsisStatus" class="text-muted small">Loading...</span>
            </div>
            <div id="synopsisText" class="mt-2 text-muted">
                <!-- JS will fill this -->
            </div>
        </div>
    </div>

</main>