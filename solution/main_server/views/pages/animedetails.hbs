<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/javascripts/animeDetails.js"></script>

<main class="container">
    <!-- Main row: poster + right column-->
    <div class="row g-4 align-items-start">
        <!-- Left column: poster -->
        <div class="col-12 col-md-4 col-lg-3">
            <div class="card anime-card mt-5">
                <img id="animeImg" src="" alt="Anime Poster" class="img-fluid anime-img rounded">
            </div>
        </div>

        <!-- Central column/right: title + info + genres + synopsis -->
        <div class="col-12 col-md-8 col-lg-9">

            <!-- Title -->
            <div class="text-center text-md-start mb-3">
                <h1 id="title" class="title-name display-6 fw-bold mb-1"></h1>
                <div id="titleJapanese" class=""></div>
            </div>

            <!-- Info + Genres next to each other -->
            <div class="row g-3">

                <div class="col-12 col-lg-6">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-2">Info</div>
                        <div id="cardScore" class="mb-1"></div>
                        <div id="cardEpisode" class="episodes mb-1"></div>
                        <div id="cardStudios" class="studios mb-1"></div>
                        <div id="cardProducer" class="producers mb-1"></div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    <div class="border rounded p-3 h-100">
                        <div class="fw-semibold mb-2">Genres</div>
                        <div id="cardGenres" class="genres"></div>
                    </div>
                </div>

            </div> <!-- end row Info + Genres -->

            <!-- Synopsis below Info + Genres, same width as right column -->
            <div class="mt-4">
                <div class="border rounded p-3 w-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="fw-semibold">Synopsis</div>
                        <span id="synopsisStatus" class="small">Loading...</span>
                    </div>
                    <div id="synopsisText" class="mt-2">
                        <!-- JS will inject the text -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
