<header class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Explore the Anime Universe</h1>

        <div class="row justify-content-center mt-4">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="container">
                    <div id="carousel" class="mt-5 carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active"></button>
                            <button type="button" data-bs-target="#carousel" data-bs-slide-to="1"></button>
                            <button type="button" data-bs-target="#carousel" data-bs-slide-to="2"></button>
                            <button type="button" data-bs-target="#carousel" data-bs-slide-to="3"></button>
                            <button type="button" data-bs-target="#carousel" data-bs-slide-to="4"></button>
                        </div>

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/deathnote.jpg" alt="Death Note" class="d-block w-100">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/fma.jpg" alt="Full Metal Alchemist" class="d-block w-100">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/hunter.jpg" alt="HunterxHunter" class="d-block w-100">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/naruto.jpg" alt="Naruto" class="d-block w-100">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/onepunch.jpg" alt="One Punch Man" class="d-block w-100">
                            </div>
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
</header>

<main class="hero-section container my-5">
    <div id="statusMessage" class="alert alert-info d-none">Searching the constellation...</div>

    <div id="resultsArea">
        <h2 class="mb-4">Trending Anime</h2>
        <!--- Trending Anime we will get from MongoDB --->
        <div class="row g-4">
            {{#if error}}
                <!--- TODO: handle error properly putting this line in the routes res.render("home", { trending: trendingAnime, error: null }); --->
                <div class="alert alert-danger">{{error}}</div>
            {{else}}
                {{#each trending}}
                    <div class="col-md-4 col-lg-3">
                        <div class="card h-100 anime-card">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text text-muted small">{{this.synopsis}}</p>
                                <span class="badge bg-primary">{{this.genre}}</span>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
</main>

<script src="/javascripts/index.js"></script>