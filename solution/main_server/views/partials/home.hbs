<header class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold">Explore the Anime Universe</h1>

        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <form id="searchForm" role="search">
                    <div class="input-group">
                        <input
                                id="searchInput" name="query" type="text" class="form-control form-control-lg w-50"
                                placeholder="Type a name...">
                        <select id="searchType" class="form-select form-select-lg w-25" aria-label="Select type">
                            <option value="anime" selected>Anime</option>
                            <option value="character">Character</option>
                            <option value="person">Person</option>
                        </select>
                        <button class="btn btn-dark btn-lg" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>

<main class="container my-5">
    <div id="statusMessage" class="alert alert-info d-none">Searching the constellation...</div>

    <div id="resultsArea">
        <h2 class="mb-4">Trending Anime</h2>
        <!--- Trending Anime we will get from MongoDB --->
        <div class="row g-4">
            {{#if error}}
                <!--- TODO: handle error properly putting this line in the routes res.render("home", { trending: trendingAnime, error: null }); --->
                <div class="alert alert-danger">{{error}}</div>
            {{else}}
                {{#each trending}}
                    <div class="col-md-4 col-lg-3">
                        <div class="card h-100 anime-card">
                            <div class="card-body">
                                <h5 class="card-title">{{this.title}}</h5>
                                <p class="card-text text-muted small">{{this.synopsis}}</p>
                                <span class="badge bg-primary">{{this.genre}}</span>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
</main>

<script src="/javascripts/home.js"></script>
